{
  "private": true,
  "sideEffects": false,
  "name": "client",
  "type": "module",
  "scripts": {
    "build": "bun run clean:build && bun run build:css && bun run build:remix",
    "build:remix": "remix build",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "watch": "run-p \"watch:*\"",
    "watch:remix": "cross-env NODE_ENV=development REMIX_ENV=development remix watch",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "watch:arc": "cross-env NODE_ENV=development arc sandbox --port 2000",
    "dev": "run-p \"dev:*\"",
    "dev:remix": "remix dev --manual -c \"arc sandbox -e testing\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "start": "NODE_ENV=production bun run clean:cache && bun run build && npm-run-all --parallel \"start:*\"",
    "start:arc": "cross-env NODE_ENV=production arc sandbox",
    "deploy": "NODE_ENV=production bun run build && arc deploy --production",
    "destroy": "arc destroy --app thomblweed-client --force",
    "clean": "bun run clean:build && bun run clean:cache",
    "clean:build": "if [ -d \"public/build\" ]; then rm -rf \"public/build\"; fi",
    "clean:cache": "if [ -d \".cache\" ]; then rm -rf \".cache\"; fi",
    "lint": "eslint .",
    "test": "vitest"
  },
  "dependencies": {
    "@remix-run/architect": "^1.19.3",
    "@remix-run/css-bundle": "^1.19.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@supabase/auth-helpers-remix": "^0.2.1",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@architect/architect": "^10.14.0",
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/source-map-support": "^0.5.6",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "cssnano": "^6.0.1",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^10.10.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "postcss-cli": "^10.1.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
