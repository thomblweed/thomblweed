{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "client",
  "sourceRoot": "apps/client",
  "projectType": "application",
  "tags": [],
  "targets": {
    "encrypt": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "sops --encrypt --age $(cat $SOPS_AGE_KEY_FILE |grep -oP \"public key: \\K(.*)\") .env > .env.enc"
        ],
        "cwd": "apps/client"
      }
    },
    "decrypt": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "sops --decrypt --age $(cat $SOPS_AGE_KEY_FILE |grep -oP \"public key: \\K(.*)\") .env.enc > .env"
        ],
        "cwd": "apps/client"
      }
    }
  }
}
