{
  "name": "client",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "pnpm clean:build && pnpm build:css && pnpm build:remix",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "clean": "pnpm clean:build && pnpm clean:cache",
    "clean:build": "if [ -d \"public/build\" ]; then rm -rf \"public/build\"; fi",
    "clean:cache": "if [ -d \".cache\" ]; then rm -rf \".cache\"; fi",
    "decrypt": "pnpm decrypt:env && pnpm decrypt:prefs",
    "decrypt:env": "sops --input-type dotenv --decrypt --output-type dotenv --age $(cat $SOPS_AGE_KEY_FILE |grep -oP \"public key: \\K(.*)\") .env.enc > .env",
    "decrypt:prefs": "sops --decrypt --age $(cat $SOPS_AGE_KEY_FILE |grep -oP \"public key: \\K(.*)\") preferences.enc > preferences.arc",
    "deploy": "NODE_ENV=production pnpm build && arc deploy --production",
    "deploy:ci": "arc deploy --production --concurrent",
    "destroy": "arc destroy --app thomblweed-client --force",
    "dev": "run-p \"dev:*\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:remix": "remix dev --manual -c \"arc sandbox -e testing\"",
    "encrypt": "pnpm encrypt:env && pnpm encrypt:prefs",
    "encrypt:env": "sops --input-type dotenv --encrypt --output-type dotenv --age $(cat $SOPS_AGE_KEY_FILE |grep -oP \"public key: \\K(.*)\") .env > .env.enc",
    "encrypt:prefs": "sops --encrypt --age $(cat $SOPS_AGE_KEY_FILE |grep -oP \"public key: \\K(.*)\") preferences.arc > preferences.enc",
    "lint": "eslint .",
    "start": "NODE_ENV=production pnpm clean:cache && pnpm build && npm-run-all --parallel \"start:*\"",
    "start:arc": "cross-env NODE_ENV=production arc sandbox",
    "test": "vitest",
    "watch": "run-p \"watch:*\"",
    "watch:arc": "cross-env NODE_ENV=development arc sandbox --port 2000",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "watch:remix": "cross-env NODE_ENV=development REMIX_ENV=development remix watch"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
